<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mvTitle"
        android:layout_width="687dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#000000"
        android:textSize="30sp"
        tools:text="Movie Title" />

    <ImageView
        android:id="@+id/mvPoster"
        android:layout_width="291dp"
        android:layout_height="172dp"
        android:layout_below="@+id/mvTitle"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mvOverview"
        android:layout_width="413dp"
        android:layout_height="244dp"
        android:layout_below="@+id/mvTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/mvPoster"
        android:fontFamily="@font/poppins"
        android:justificationMode="inter_word"
        android:textSize="16sp"
        tools:text="Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description Movie description" />

    <RatingBar
        android:id="@+id/mvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mvPoster"
        android:layout_alignEnd="@+id/mvPoster"
        android:layout_marginEnd="30dp" />


</RelativeLayout>